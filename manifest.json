  {
    "name": "Wildcard",
    "version": "0.1",
    "description": "Spreadsheet-driven customization of web applications",
    "manifest_version": 2,
    "content_scripts": [
      {
        "js": [
          "dist/wildcard.js"
        ],
        "matches": [
          "<all_urls>"
        ],
        "css" : ["dist/wildcard.css"]
      },
      {
        "js": [
          "dist/marketplace.js"
        ],
        "matches": [
          "https://wildcard-marketplace.herokuapp.com/adapter.html?aid=*",
          "https://wildcard-marketplace.herokuapp.com/upload.html?key=*"
        ]
      }
    ],
    "background": {"scripts": ["dist/wildcard-background.js", "src/wildcard-ajax.js"]},
    "permissions": [
      "storage",
      "*://localhost/*",
      "history",
      "http://*/*",
      "https://*/*",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "contextMenus"
    ],
    "options_page": "options.html"
  }
